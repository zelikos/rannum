<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/com/gitlab/zelikos/rollit/" id="com.gitlab.zelikos.rollit">
    <key name="window-position" type="(ii)">
      <default>(-1, -1)</default>
      <summary>Window position</summary>
      <description>Most recent window position (x, y)</description>
    </key>
    <key name="window-size" type="(ii)">
      <default>(290, 250)</default>
      <summary>Window size</summary>
      <description>Most recent window size (width, height)</description>
    </key>
    <key name="maximized" type="b">
      <default>false</default>
      <summary>Maximized</summary>
      <description>Whether the window is maximized or not</description>
    </key>
    <key name="show-history" type="b">
      <default>true</default>
      <summary>Show History</summary>
      <description>Show roll history pane</description>
    </key>
    <key name="custom-roll" type="i">
      <default>12</default>
      <summary>Number of sides</summary>
      <description>Number of sides of the dice</description>
    </key>
    <key name="last-selected" type="s">
      <default>"d6"</default>
      <summary>Last-selected dice sides</summary>
      <description>Last-selected dice side preset</description>
    </key>
  </schema>
</schemalist>
