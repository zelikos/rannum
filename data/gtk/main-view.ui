<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="RollitMainView" parent="AdwBin">
    <property name="margin-top">6</property>
    <property name="margin-start">6</property>
    <property name="margin-end">6</property>
    <property name="margin-bottom">6</property>
    <child>
      <object class="AdwClamp">
        <property name="maximum-size">240</property>
        <property name="child">
          <object class="GtkStack" id="result_stack">
            <!-- <property name="transition-type">over-down-up</property> -->
            <child>
              <object class="GtkStackPage">
                <property name="name">empty</property>
                <property name="child">
                  <object class="GtkLabel">
                    <property name="label">?</property>
                    <style>
                      <class name="roll_result"/>
                    </style>
                  </object>
                </property>
              </object>
            </child>
            <child>
              <object class="GtkStackPage">
                <property name="name">result</property>
                <property name="child">
                  <object class="GtkRevealer" id="result_revealer">
                    <property name="transition-type">slide-down</property>
                    <property name="transition-duration">120</property>
                    <property name="child">
                      <object class="AdwClamp">
                        <property name="orientation">vertical</property>
                        <property name="maximum-size">240</property>
                        <property name="child">
                          <object class="GtkButton" id="result_button">
                            <property name="child">
                              <object class="GtkLabel" id="result_label">
                                <style>
                                  <class name="roll_result"/>
                                </style>
                              </object>
                            </property>
                            <property name="action-name">win.copy-latest</property>
                            <style>
                              <class name="circular"/>
                              <class name="background"/>
                            </style>
                          </object>
                        </property>
                      </object>
                    </property>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </property>
      </object>
    </child>
  </template>
</interface>

