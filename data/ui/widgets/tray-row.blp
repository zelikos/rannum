using Gtk 4.0;
using Adw 1;

template $RollitTrayRow : Adw.ActionRow {
  action-name: "row.set-dice";
  activatable: true;

  [suffix]
  Button {
    action-name: "row.delete";
    icon-name: "list-remove-symbolic";
    tooltip-text: _("Remove dice");
    halign: center;
    valign: center;

    styles [
      "circular",
    ]
  }
}
