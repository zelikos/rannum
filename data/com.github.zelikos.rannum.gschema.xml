<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema path="/com/github/zelikos/rannum/" id="com.github.zelikos.rannum">
    <key name="dark-style" type="b">
      <default>false</default>
      <summary>Prefer dark style</summary>
      <description>Switches between dark and light style</description>
    </key>
    <key name="window-position" type="(ii)">
      <default>(-1, -1)</default>
      <summary>Window position</summary>
      <description>Most recent window position (x, y)</description>
    </key>
    <key name="custom-roll" type="i">
      <default>6</default>
      <summary>Number of sides</summary>
      <description>Number of sides of the dice</description>
    </key>
    <key name="last-selected" type="s">
      <default>"d6"</default>
      <summary>Last-selected dice sides</summary>
      <description>Last-selected value to determine highest possible dice roll</description>
    </key>
  </schema>
</schemalist>
